<header class="md:flex md:flex-row md:justify-between md:mx-4 md:py-3 burger">
    <img src="#" alt="logo" width="100" class="py-3">
    <nav class="md:p-3 md:mr-20 ">
        <div class="md:flex md:flex-row md:gap-5 text-center" id="myLinks">
