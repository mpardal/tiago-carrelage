<style>
    .burger {
        overflow: hidden;
        background-color: #333;
        position: relative;
    }

    .burger #myLinks {
        display: none;
    }

    .burger a {
        color: white;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
        display: block;
    }

    .burger a.icon {
        background: black;
        display: block;
        position: absolute;
        right: 0;
        top: 0;
    }

    .burger a:hover {
        background-color: #ddd;
        color: black;
    }
</style>


