---

import { Astronav, MenuItems, MenuIcon,  Dropdown, DropdownItems } from "astro-navbar";

---

<header class="lg:flex p-5 gap-5 bg-gray-300">
    <Astronav>
        <div class="flex w-full justify-between">
            <h1 class="text-xl text-center font-bold md:text-2xl ">Tiago Carrelage</h1>
            <div class="block lg:hidden">
                <MenuIcon class="w-4 h-4 text-gray-800" />
            </div>
        </div>
        <MenuItems class="hidden lg:flex">
            <ul class="flex flex-col lg:flex-row lg:gap-5">
                <li>
                    <a href="/">Accueil</a>
                </li>
                <li>
                    <a href="/about/">Réalisations</a>
                </li>
                <li>
                    <Dropdown class="group">
                        <button class="flex items-center">
                            <span> Prestations </span>
                            <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="3"
                                    stroke="currentColor"
                                    class="w-3 h-3 mt-0.5 group-open:rotate-180">
                                <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                            </svg>
                        </button>
                        <DropdownItems class="relative">
                            <div class="absolute top-0 bg-gray-300">
                                <ul class="p-2">
                                    <li>
                                        <a href="/interieur/" class="text-xs">Intérieur</a>
                                    </li>
                                    <li>
                                        <a href="/exterieur/" class="text-xs">Extérieur</a>
                                    </li>
                                    <li>
                                        <a href="/sdb/" class="text-xs">Salle de bain</a>
                                    </li>
                                </ul>
                            </div>
                        </DropdownItems>
                    </Dropdown>
                </li>
                <li>
                    <a href="/contact/">Contact</a>
                </li>
            </ul>
        </MenuItems>
    </Astronav>
</header>

