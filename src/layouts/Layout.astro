---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BottomPage from "../components/BottomPage.astro";
export interface Props {
	title: string;
	titlePage: string;
}

const { title, titlePage } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="société de carrelage sur Bordeaux et sa périphérie"/>
		<meta name="keywords" content="carrelage, faïence, mural, sanitaire, intérieur, extérieur">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="m-0 h-screen">
	<Header />
	<main class="container mx-auto">
		<h1>{titlePage}</h1>
		<slot />
		<BottomPage />
	</main>
	<Footer />
	</body>
</html>
